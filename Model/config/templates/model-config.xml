<?xml version="1.0" encoding="UTF-8" ?>

<modelConfig modelName="${model_name}"
             webServiceUrl="${webserviceurl}"
             webAppUrl="${myURL}"
             smtpServer="${smtp_server}"
             supportEmail="${support_email}"
             defaultRole="${default_role}"
             secretKeyFile="${auth_secret_keyfile}"
             >
             
    <queryMonitor
             baseline="${querymonitor.baseline_query_threshold}"
             slow="${querymonitor.slow_query_threshold}"
             />
             
    <appDb  login="${appdb.login}"
            password="${appdb.password}"
            connectionUrl="${appdb.connectionUrl}"
            platform="${appdb.database_platform}"
            maxActive="${appdb.max_active}"
            maxIdle="${appdb.max_idle}"
            minIdle="${appdb.min_idle}"
            maxWait="${appdb.max_wait}"
            showConnections="${appdb.show_connections}"
            showConnectionsInterval="${appdb.show_connections_interval}"
            showConnectionsDuration="${appdb.show_connections_duration}"
            userDbLink="${appdb.user_dblink}"
            />
             
    <userDb login="${userdb.login}"
            password="${userdb.password}"
            connectionUrl="${userdb.connectionUrl}"
            platform="${userdb.database_platform}"
            maxActive="${userdb.max_active}"
            maxIdle="${userdb.max_idle}"
            minIdle="${userdb.min_idle}"
            maxWait="${userdb.max_wait}"
            showConnections="${userdb.show_connections}"
            showConnectionsInterval="${userdb.show_connections_interval}"
            showConnectionsDuration="${userdb.show_connections_duration}"
            userSchema="${userdb.userschema}"
            />
           
    <emailSubject>
         <![CDATA[
       Your ${product} Password
         ]]>
    </emailSubject>
    <emailContent>
         <![CDATA[
         ${email_content}
         ]]>
    </emailContent>
</modelConfig>

