<project name="ApiCommonWebsite" default="Installation" basedir=".">

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo  Dependencies  oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="WDK-Installation">
    <ant antfile="../WDK/build.xml" target="WDK-Installation">
      <property name="project" value="WDK"/>
      <property name="version" value="WDK_version_1-10"/>
    </ant>
  </target>  

  <target name="CBIL-Installation">
    <ant antfile="../CBIL/build.xml" target="CBIL-Installation">
      <property name="project" value="CBIL"/>
      <property name="version" value="WDK_version_1-10"/>
    </ant>
  </target>  

  <target name="WDK-WebInstallation">
    <ant antfile="../WDK/build.xml" target="WDK-WebInstallation">
      <property name="project" value="WDK"/>
      <property name="version" value="WDK_version_1-10"/>
    </ant>
  </target>  

  <target name="WDK-Checkout" unless="WDK.present"> 
    <ant target="defaultProjectCheckout" inheritAll="false">
      <property name="svnurl" value="https://www.cbil.upenn.edu/svn/gus/WDK" />
      <property name="project" value="WDK"/>
      <property name="version" value="WDK_version_1-10"/>
    </ant>
  </target>  

  <target name="CBIL-Checkout" unless="CBIL.present"> 
    <ant target="defaultProjectCheckout" inheritAll="false"> 
      <property name="svnurl" value="https://www.cbil.upenn.edu/svn/gus/CBIL" />
      <property name="project" value="CBIL"/>
      <property name="version" value="1.7"/>
    </ant>
  </target>    

  
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo    Checkout    oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-ChildCheckout">
    <available file="../WDK" type="dir" property="WDK.present" />
    <available file="../CBIL" type="dir" property="CBIL.present" />
    <antcall target="WDK-Checkout" />
    <antcall target="CBIL-Checkout" />
  </target>
  
  
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo    Update    oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-ChildUpdate" >
    <ant target="defaultProjectUpdate">
      <property name="project" value="WDK"/>
    </ant>
    <ant target="defaultProjectUpdate">
      <property name="project" value="CBIL"/>
    </ant>
  </target>


  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo  Installation  oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-Installation" depends="WDK-Installation,
                                                       CBIL-Installation,
                                                       ApiCommonWebsite/Model-Installation,
                                                       ApiCommonWebsite/View-Installation"
  >

    <ant target="defaultProjectInstall"/>

  </target>


 <!-- ooooooooooooooooooooooo  Install Components  ooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite/Model-Installation">
    <ant target="defaultComponentInstall">
      <property name="project" value="ApiCommonWebsite"/>
      <property name="component" value="Model"/>
    </ant>
  </target>

  <target name="ApiCommonWebsite/Site-Installation">
    <ant target="defaultComponentInstall">
      <property name="project" value="ApiCommonWebsite"/>
      <property name="component" value="Site"/>
    </ant>
  </target>

  <target name="ApiCommonWebsite/View-Installation">
    <ant target="defaultComponentInstall">
      <property name="project" value="ApiCommonWebsite"/>
      <property name="component" value="View"/>
    </ant>
  </target>

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooo  Web Installation  oooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-WebInstallation" depends="ApiCommonWebsite-Installation,
                                                          WDK-WebInstallation,
                                                          ApiCommonWebsite/Site-WebInstallation">
 </target>

  <target name="ApiCommonWebsite/Site-WebInstallation">
    <ant target="defaultWebComponentInstall">
      <property name="project" value="ApiCommonWebsite"/>
      <property name="component" value="Site"/>
    </ant>

    <!-- get the orginal gbrowse_img code and patch it -->
    <copy file="${projectsDir}/ApiCommonWebsite/Site/cgi-bin/gbrowse_img" 
          tofile="${cgibinTargetDir}/gbrowse_img" overwrite="true"/>
    <exec executable="patch">
        <arg value="-d"/>
        <arg path="${cgibinTargetDir}"/>
        <arg value="-N"/>
        <arg value="-i"/>
        <arg file="${projectsDir}/ApiCommonWebsite/Site/doc/gbrowse_img.patch"/>
    </exec>
    <!-- replacement for gbrowse_img config and lib dirs -->
    <replace file="${cgibinTargetDir}/gbrowse_img" 
    	token="@confTargetDir@" 
    	value="${confTargetDir}"/>
    <replace file="${cgibinTargetDir}/gbrowse_img" 
    	token="@cgilibTargetDir@" 
    	value="${cgilibTargetDir}"/>
  </target>

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooo  Release  ooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-Release">
    
    <ant target="defaultProjectRelease">
      <property name="cvsroot" value=":ext:cvs.sanger.ac.uk:/cvsroot/GUS"/>
    </ant>
  </target>  

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo  Distributable  ooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="ApiCommonWebsite-Distributable">

    <copy todir="${targetDir}">
      <fileset dir="${projectsDir}" >
        <exclude name="**/CVS/*" />
      </fileset>
    </copy>  
  </target>  

</project>


